[ESCREVENDO EM UM ARQUIVO]

int main(int argc, char** argv) {
	
	string array[3] = {"melisaa", "papai", "mamae"};

	ofstream arquivo;
	
	arquivo.open("arquivo");
	
	if (!arquivo) {
		cout << "File not created!";
	}
	else {
		
		string text;
		
		for (int i = 0; i<3; i++) {
		
			
			arquivo << array[i] << endl;
			
		}
		
		arquivo.close(); 
	}
	
	return 0;
}
