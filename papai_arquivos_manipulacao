[CARREGAR TEXTO DO ARQUIVO PARA UM VETOR]

#include <iostream>
#include <string>
#include <fstream>
#include <cstring>

using namespace std;

int main(int argc, char** argv) {
	
	string array[3] = {"melisaa", "papai", "mamae"};
	int i = 0;

	ifstream arquivo;
	
	arquivo.open("arquivo");
	
	if (!arquivo) {
		cout << "File not created!";
	}
	else {
		
		string text;
		
		while (getline(arquivo, text)) { 
		
		 array[i] = text;
		 
		 i++;
		
		}
		
		arquivo.close(); 
	}
	
	for (int i=0; i<3; i++) {
		
		cout << array[i] << endl;
		
	}
	
	return 0;
}
"--------------------------------------------------------------------------------------------------------------------------------------------------
