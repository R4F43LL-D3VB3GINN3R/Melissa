#include <iostream>
#include <string>
#include <cstring>
#include <vector>
#define MAX 10

using namespace std;

struct sonic {

    string nome;
    float peso;
    int idade;
    char gen;

    void inserir_sonic(sonic sonic_vet[], int &i) {

        string nome_var;
        float peso_var;
        int idade_var;
        char gen_var;

        cout << "Nome: ";
        cin >> nome_var;
        sonic_vet[i].nome = nome_var;
        cout << " " << endl;

        cout << "idade: ";
        cin >> idade_var;
        sonic_vet[i].idade = idade_var;
        cout << " " << endl;

        cout << "genero: ";
        cin >> gen_var;
        sonic_vet[i].gen = gen_var;
        cout << " " << endl;

        cout << "peso: ";
        cin >> peso_var;
        sonic_vet[i].peso = peso_var;
        cout << " " << endl;

    }

};

int main() {

    sonic sonico;
    sonic sonicagem[MAX];
    int cursor;
    int i = 0;

    while (true) {

        cout << "1- cadastrar personagem" << endl;
        cout << "2- listar personagens cadastrados" << endl;
        cout << "3- remover algum personagem" << endl;
        cout << "4- alterar" << endl;
        cout << "5- sair do programa" << endl;
        cin >> cursor;

        switch (cursor) {

            case 1:

                sonico.inserir_sonic(sonicagem, i);
            
            break;

            case 5:

                return 1;

             }

    }

    return 0;
}
